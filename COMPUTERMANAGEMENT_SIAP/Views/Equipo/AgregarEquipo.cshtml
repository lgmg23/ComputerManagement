@model COMPUTERMANAGEMENT_MODEL.EquipoModel

@{
    ViewBag.Title = "AgregarEquipo";
}

<h2>Agregar Equipo</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <script src="~/Scripts/angular.min.js"></script>
    <script src="~/Scripts/Custom/EquipoController.js"></script>
    <div class="form-horizontal" ng-app="Equipo" ng-controller="EquipoController" ng-init="init()">
        <hr />
        <div class="form-group">
            @Html.LabelFor(model => model.Producto, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <select ng-model="producto"
                        ng-options="producto.IdProducto as producto.Modelo for producto in listaProductos track by producto.IdProducto"
                        name="Producto" class="form-control">
                    <option value="">Seleccione Producto</option>
                </select>
            </div>
        </div>

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Serie, htmlAttributes: new { @class = "control-label col-md-2" })
            <img src="http://webviewersolutions.com/assets/images/barcodescanning.gif" />
            <div class="col-md-10">
                @Html.EditorFor(model => model.Serie, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Serie, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Agregar" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Ir a los productos", "Index")
</div>

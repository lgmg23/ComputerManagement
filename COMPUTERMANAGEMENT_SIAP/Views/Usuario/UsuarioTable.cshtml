
@{
    ViewBag.Title = "UsuarioTable";
}

<h2>UsuarioTable</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <script src="~/Scripts/angular.min.js"></script>
    <script src="~/Scripts/Custom/UsuarioTableController.js"></script>


    <div class="form-horizontal" ng-app="Usuario" ng-controller="UsuarioController" ng-init="init()">
        <hr />
        <div class="form-group">
            <h1>Usuario </h1>
            <div class="col-md-10">
                <input type="text" ng-model="busqueda" ng-change="loadChange()" name="busqueda" />
            </div>
        </div>

        <div>
            <table>
                <tr ng-repeat="usuario in listaUsuario">
                    <td>{{ usuario.Usuario }}</td>
                    <td>{{ usuario.NombreCompleto }}</td>
                </tr>
            </table>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

